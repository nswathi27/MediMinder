<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9E1E6"
    tools:context=".MedicineDetails">

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/user_circle"
        android:src="@drawable/user_icon"/>

    <!-- Medicine name, quantity, and time in a single row -->
    <LinearLayout
        android:id="@+id/medicine_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_image"
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">

        <!-- Medicine name -->
        <TextView
            android:id="@+id/medicine_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/aldrich"
            android:text="Medicine Name"
            android:textColor="#3F51B5"
            android:textSize="18sp" />

        <!-- Medicine quantity -->
        <TextView
            android:id="@+id/medicine_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/aldrich"
            android:gravity="center"
            android:text="Quantity"
            android:textColor="#3F51B5"
            android:textSize="18sp" />

        <!-- Medicine time -->
        <TextView
            android:id="@+id/medicine_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/aldrich"
            android:gravity="end"
            android:text="Time"
            android:textColor="#3F51B5"
            android:textSize="18sp" />

    </LinearLayout>


</RelativeLayout>